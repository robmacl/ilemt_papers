	number = {1},
	urldate = {2025-04-04},
	journal = {IEEE Transactions on Robotics},
	author = {MacLachlan, Robert A. and Becker, Brian C. and Tabares, Jaime Cuevas and Podnar, Gregg W. and Lobes, Louis A. and Riviere, Cameron N.},
	month = feb,
	year = {2012},
	pages = {195--212},
	file = {PDF:files/7/MacLachlan et al. - 2012 - Micron An Actively Stabilized Handheld Tool for Microsurgery.pdf:application/pdf},
}

