	month = sep,
	year = {2006},
	pages = {1359--1368},
	file = {PDF:files/15/Hastenteufel et al. - 2006 - Effect of 3D ultrasound probes on the accuracy of electromagnetic tracking systems.pdf:application/pdf},
}

@article{milne_accuracy_1996,
